.top, .middle, .bottom
    background-color #F4F2F3
    width 100%
    margin-bottom 10px
    padding 10px 0
    >h3
        text-align center

.top
    height 70px
    display flex
    justify-content center
    .return_btn
        position absolute
        top 25px
        left 0px
        margin-left 15px


.search_group
    background-color #f4f4f4
    border 1px solid #adadad
    display flex
    flex-direction row
    padding 5px 10px
    justify-content flex-start
    >input
        width calc(100% - 60px)
    .left_icon,.right_icon
        width 30px
        display flex
        flex-direction row
        justify-content center
        align-items center
        margin-left 10px
        font-size 1.5em
    .left_icon
        margin-left 0px
        margin-right 10px


.middle
    height auto
    .user_list
        width 100%
        .line
            display flex
            flex-direction row
            justify-content center
            align-items center
            height 40px
            padding 5px 10px
            .cell
                width 33.33%
                display flex
                flex-direction row
                justify-content center
                align-content center
                >img
                    height 30px
                    width 30px
                    border-radius 4px

.bottom
    height 60px
    .page_area
        height 100%
        font-size 16px
        display flex
        flex-direction row
        justify-content center
        align-items center
        >a
            clor lightgrey
            padding 5px 10px
        .active
            color #337ab7
