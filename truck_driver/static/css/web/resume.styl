font_color = #BABABA
border_color = #dcdcdc
default_blue = #3388FE
light_grey = #f4f4f4
deep_grey = #5C5F63


.page_middle
  height auto !important
  color font_color

  .block_01
    .block_left
      width 75%
      font-size 1rem
      display flex
      flex-direction row
      justify-content flex-start
      .cell
        width 33%
      .image
        height 16em
        padding-top 2.5em
        display flex
        flex-direction row
        justify-content center
        align-items center
        > img
          height 100%
          width auto
      .base_info
        margin-top 2em
        .line
          font-size 1rem
          padding 0.5em 1em
          .driver_name,.age,.education,.married
            padding 0 0.3em
            border-right 1px solid font_color
          .married
            border-right none
          .favorite
            color: white
            font-size 0.9rem
            background-color default_blue
            padding 2px 20px !important

    .block_right
      width 25%