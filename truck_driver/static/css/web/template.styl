font_color = #BABABA
default_blue = #3388FE
light_grey = #f4f4f4
deep_grey = #5C5F63
center_margin()
  d = calc(50% - 500px)


html
  font-size:14px
  width:100%
  height:100%

body
  width:100%
  height:100%

  .page_top
    /*页头*/
    width:100%
    background-color light_grey
    height: top_h = 70px
    padding: 10px 0

    .top_div
      margin-left center_margin()
      max-width: 1000px
      display: flex
      justify-content space-between

      .top_right
        display flex
        justify-content flex-end
        align-items center
        font-size:1rem

        > span
          width: 6em

          > a
            color:font_color
            padding-bottom: 2px
            text-decoration none
          > a:hover
            color: black
            border-bottom: 2px solid default_blue
          .active
            color: black
            border-bottom: 2px solid default_blue




  .page_middle
    /*中间区域*/
    max-width: 1000px
    margin-left center_margin()
    min-height calc(100% - 70px - 65px)  /*子页面需要覆盖此属性*/


  .page_bottom
    /*页脚*/
    width: 100%
    height: 65px
    background-color deep_grey
    font-size:0.8rem
    color: font_color
    text-align: center
    padding-top:0.6em
    > div
      span
        color: light_grey