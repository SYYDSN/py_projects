html
    width 100%
    height 100%
    padding 0
    margin 0
    body
        width 100%
        height 100%
        >.show
            width 100%
            height calc(100% - 120px)
            margin 10px
            border 1px solid lightgrey
            overflow-y scroll
            >.line
                width 100%
                height 30px
                padding 7px 10px
                overflow-x auto
        .bottom
            width 100%
            height 50px
            padding 20px
            display flex
            flex-direction row
            justify-content center
            align-items center
            >input
                width calc(100% - 170px)
                height 30px
            >button
                height 30px
                width 80px
                margin 10px