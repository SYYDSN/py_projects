.top_block
    .form
        margin-top 15%
        display flex
        flex-direction column
        align-items center
        justify-content center
        .icon_line
            display flex
            flex-direction row
            justify-content center
            align-items center
            padding-bottom 40px
            >.big_icon
                font-size 100px
                color #337ab7
        .line
            margin-bottom 40px
            display flex
            flex-direction row
            justify-content center
            align-items center
            width 100%
            max-width 400px
            font-size 14px
            >i
                width 45px
                font-size 1.2em
                display block
                color #337ab7
            >.fa-mobile-phone
                font-size 1.5em
            >input
                border 1px solid #f1f1f1
                border-radius 5px
                width calc(100% - 3.5em)
                padding 0.6em
                ::-webkit-input-placeholder /* WebKit, Blink, Edge */
                    color #dedede
                :-moz-placeholder/* Mozilla Firefox 4 to 18 */
                    color #dedede
                ::-moz-placeholder  /* Mozilla Firefox 19+ */
                    coloront_color #dedede
                :-ms-input-placeholder /* Internet Explorer 10-11 */
                    color #dedede
            button
                width 100%
                min-width 100px
                max-width 200px

            .warning
                border 1px solid red

