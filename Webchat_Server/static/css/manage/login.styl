body
  background-image url("/static/images/login_background.jpg")
  background-attachment fixed
  background-repeat no-repeat
  background-size cover
  height bh = 100%
  width 100%
  position absolute
  >.top
    width 100%
    height 90px
    font-size 40px
    color #337ab7
    padding-top 0.5em
    padding-left 2em
  >.outer
    width 100%
    height calc(100% - 90px)
    //background-color #1b6d85
    display flex
    flex-direction column
    justify-content center
    align-items center
    >.inner
      margin-top -100px
      width 600px
      border 2px solid #bfaab0
      border-radius 10px
      box-shadow 4px 4px 8px #e0c9d0
      >.title
        font-size 28px
        display flex
        flex-direction row
        justify-content flex-start
        align-items center
        >.my_h1
          color #5f5f5f
          padding 24px 16px 16px 20px
          border-bottom 1px solid #d3d3d3
          margin-bottom 3px
        >.sep
          width 5px
          background-color  #337ab7
          display block
          margin-left 40px
          height 30px
      >.content
          width 100%
          padding 14px 36px 59px 36px
          >.line
            font-size 18px
            width 100%
            display flex
            flex-direction row
            justify-content center
            align-items center
            padding 0.6em 0
            >.left
              width 12%
              display flex
              flex-direction row
              justify-content space-between
              align-items center
            >.right
              width 88%
              >span
                width 10%
                text-align left
              >input
                width 90%
                height 3em
                padding 1em
                border 1px solid #bfaab0
                border-radius 8px
                box-shadow 2px 2px 4px #e0c9d0
              >input::-webkit-input-placeholder
                color #d3d3d3
              >input:-moz-placeholder
                color #d3d3d3
              >input::-moz-placeholder
                color #d3d3d3
              >input:-ms-input-placeholder
                color #d3d3d3
            #sub_btn
              width calc(100% - 1.2em - 72px)
              padding-top 10px
              padding-bottom 10px

          >.warning
            opacity 0
            width 100%
            height 16px
            margin 4px
            font-size 16px
            color red
            text-shadow 1px 1px 1px red
            text-align center





