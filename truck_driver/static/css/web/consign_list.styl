font_color = #9A9A9A
label_color = #636363
border_color = #dcdcdc
default_blue = #3388FE
light_grey = #f4f4f4
deep_grey = #5C5F63


.page_middle
  height auto !important
  .nav_top
    padding 0.8em 0
    .nav-tabs
      li
        a
          color label_color
          padding 5px 15px
      .active
        a
          color default_blue

  .list
    .sep
      background-color light_grey
      height 1.6em
      margin 1em 0
      width 100%
    .consign
      padding-top 1em
      label
        color deep_grey
      .status_area
        margin-left 1em
      .delete_consign,.edit_consign,.icon_desc,.resume_consign
        color font_color
      .delete_consign,.edit_consign,.icon_desc,.resume_consign:hover
        cursor pointer
      .delete_consign,.resume_consign
        margin-left 2em
      .edit_consign,.icon_desc
        margin-left 1em
      .field
        .key
          color deep_grey
          font-weight 700
        .value,.welfare_div,.duty_div,.resp_div
          padding 0.8em 0
        .value
          color font_color
          display flex
          flex-direction row
          flex-wrap wrap
          .child_item
            min-width 10%
            margin-right 1.5em
            .name
              margin-right 0.3em
        .welfare_div
          .welfare
            font-size 0.95rem
            background-color #E2F3FE
            padding 5px 16px
            color #2125ff
            margin-right 14px
        .duty_div
          .line
            color font_color
            padding 5px 0
        .resp_div
          .no_resp
            color font_color
            padding 5px 0

  .page_area
    display flex
    flex-direction row
    flex-wrap nowrap
    justify-content center
    padding 1.2em 0
    > a
      color font_color
      font-size 1rem
      border 1px solid border_color
      padding 0 5px
      margin 0 6px
      border-radius 4px
      text-decoration none
    .active
      color #47a9fe
    > span
      color font_color
      font-size 1rem
      margin-left 1em

  #my_tips
    .modal-body
      .line_div
        display block
        .example_div
          margin 0.5em 0 1em 2em
          .example
            padding 2px 0
            .fa
              margin-right 2em
      .a_line
        margin 0 0 0.7em 0
        color font_color
        .my_text
          font-weight 700

  #launch_tips
    display none

  .my_text
    color font_color
  .my_status
    color default_blue
  .my_stop
    color font_color
