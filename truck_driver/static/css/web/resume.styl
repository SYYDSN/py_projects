font_color = #9a9a9a
border_color = #dcdcdc
default_blue = #3388FE
light_grey = #f4f4f4
deep_grey = #5C5F63


.page_middle
  height auto !important
  color font_color
  .driver_name
    font-size 18px
    font-weight 600
    color deep_grey

  .block_01
    display flex
    flex-direction row
    justify-content space-between
    border 1px solid border_color
    .block_left
      width 75%
      font-size 1rem
      display flex
      flex-direction row
      justify-content flex-start
      .cell
        width 33%
      .image
        height 16em
        padding-top 2.5em
        display flex
        flex-direction row
        justify-content center
        align-items center
        > img
          height 100%
          width auto
      .base_info
        margin-top 2em
        .line
          font-size 1rem
          padding 0.25em 1em
          .gender,.age,.education,.married
            padding 0 0.3em
            border-right 1px solid font_color
          .married
            border-right none
          .favorite
            color: white
            font-size 0.9rem
            background-color default_blue
            padding 2px 20px !important
          .un_favorite
            color: font_color
            font-size 0.9rem
            padding 2px 20px !important

    .block_right
      width 25%
      padding 1em 0 1.5em 0
      .line
        margin-left calc((100% - 10em) / 2)
        width 10em
      .title
        display flex
        flex-direction row
        justify-content space-around
        #random:hover
          cursor pointer
      .random_image
        height 110px
        text-align center
        padding-top 1em
        img
          height 100%
          width auto

  .block_02
    font-size 1rem
    margin-top 20px
    padding: 3em
    width 100%
    min-height 200px
    border 1px solid border_color
    background-color light_grey

    .line
      width 100%
      border 1px solid border_color
      padding 2em 1.6em
      background-color white
      .inner_line
        padding 0.3em 0
        .gender,.age,.education,.married
          padding 0 0.5em
          border-right 1px solid font_color
        .gender
          padding-left 0
        .married
          border-right none
      .item
        font-size 1rem
        margin-top 2em
        .item_line
          span
            margin-left 1.2em
      .first
        margin-top 0

    .nav
      padding 0
      border-bottom none
      table
        width 100%
        border-collapse: collapse
        cellspacing 0
        tr
          display flex
          flex-direction row
        td
          width 20%
          border-right 1px solid border_color
          text-align center
          height 2.4em
          display flex
          flex-direction column
        .last
          border none
        span
          width 100%
          height 2px
        .active
          background-color default_blue
        a
          width 100%
          height 100%
          color #83868a
          font-size 16px
          line-height 2em
          text-decoration none
    .sep
      font-size 1.1rem
      color deep_grey
      padding-top 0.4em
      padding-bottom 0.4em
      background-color #dddddd
