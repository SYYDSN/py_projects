font_color = #9A9A9A
label_color = #636363
border_color = #dcdcdc
default_blue = #3388FE
light_grey = #f4f4f4
deep_grey = #5C5F63


.page_middle
  height auto !important
  .nav_top
    padding 0.8em 0
    .nav-tabs
      li
        a
          color label_color
          padding 5px 15px
      .active
        a
          color default_blue

  .list
    .sep
      background-color light_grey
      height 1.6em
      margin 1em 0
      width 100%
    .consign
      padding-top 1em
      label
        color deep_grey
      .delete_consign,.edit_consign
        color font_color
      .delete_consign,.edit_consign:hover
        cursor pointer
      .delete_consign
        margin-left 3em
        font-size 1.1em
      .edit_consign
        margin-left 1em
      .field
        .key
          color deep_grey
          font-weight 700
        .value,.welfare_div,.duty_div,.resp_div
          padding 0.8em 0
        .value
          color font_color
          display flex
          flex-direction row
          flex-wrap wrap
          .child_item
            min-width 10%
            margin-right 1.5em
            .name
              margin-right 0.3em
        .welfare_div
          .welfare
            font-size 0.95rem
            background-color #E2F3FE
            padding 5px 16px
            color #2125ff
            margin-right 14px
        .duty_div
          .line
            color font_color
            padding 5px 0
        .resp_div
          .no_resp
            color font_color
            padding 5px 0

  .page_area
    display flex
    flex-direction row
    flex-wrap nowrap
    justify-content center
    padding 1.2em 0
    > a
      color font_color
      font-size 1rem
      border 1px solid border_color
      padding 0 5px
      margin 0 6px
      border-radius 4px
      text-decoration none
    .active
      color #47a9fe
    > span
      color font_color
      font-size 1rem
      margin-left 1em
