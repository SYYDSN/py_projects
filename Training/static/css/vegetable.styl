html
    font-size 14px
    width 100%
    height 100%
    body
        width 100%
        height 100%
        /**/
        .show_row
            height calc(100% - 150px)
            width 100%
            .show_text
                width 100%
                height auto
                padding 5px 10px 15px
                #current_title
                    font-size 24px
                    color #1976b4
                    text-align center
                    padding 10px 0
                #current_desc
                    font-size 16px
                    color dimgrey
                    text-indent 2em
            .show_img
                width 100%
                min-height 400px
                height auto
                .show_img_inner
                    width 100%
                    height 100%
                    display flex
                    flex-direction row
                    justify-content center
                    background-color #e5e5e5
                    >img
                        padding 10px
                        height 100%
                        width 100%
        .img_nav
            width 100%
            height 100px
            padding 5px 20px
            background-color #e5e5e5
            .img_nav_inner
                width 100%
                height 100%
                display flex
                flex-direction row
                justify-content center
                .nav_item
                    width 20%
                    height 100%
                    padding 5px
                    >img
                        height 100%
                        width auto

        .page_area
            height 50px
            width 100%
            display flex
            flex-direction row
            justify-content center
            font-size 20px
            >a
                padding 15px
            >span
                padding 15px