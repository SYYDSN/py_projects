default_color = #8c8c8c

html
  font-size:14px
  width:100%
  height:100%

body
  width:100%
  height:100%
  .head_c
    width:100%
    height:110px
    padding 30px 0
    display flex
    justify-content flex-start

    .head_left
      width: hl_width = 25%;
      text-align: right
      > img
        wdith:100%
        height:100%
        margin-right:30px
    .head_right
      width: 75%
      height:100%
      border-left: 1px solid default_color
      display flex
      flex-direction: column
      justify-content: center
      .title
        font-size:1.2rem
        color: default_color
        margin-left: 1.8em

  #main
    height:main_height = calc(100% - 210px)
    width:100%
    background-image:url("/static/image/web/beijing.png")
    background-repeat:no-repeat
    background-size:100% 100%
    -moz-background-size:100% 100%
    display:flex
    justify-content center
    align-items: center

    #login_div
      margin-top: -1em
      background-color:#fff
      width:480px
      if calc(100% - 4em - 400px)
       height 400px
      else
        height calc(100% - 4em)
      z-index: 100
      text-align: center
      font-size:16px
      border-radius: 6px
      > div
        border:none
        padding: 1.2em 3em
        > input
          font-size:14px
          width:100%
          background-color: #f1f1f1
          padding:10px 20px
          color:#c7c7c7
          border: 1px solid #c7c7c7
          border-radius:6px
          //outline:none /*去掉chrome浏览器选中时边框的颜色*/
        > input:focus
            border-radius:6px

      .title
        font-size:1.8rem
        font-weight 400

      #submit_login
        font-size:1.2rem
        font-weight 400
        color:#fff
        background-color #23a1fe

  #bottom_div
    width: 100%
    height: 100px
    font-size:0.9rem
    color: default_color
    text-align: center
    padding-top:3em
    > p
      span
        color: #616161
