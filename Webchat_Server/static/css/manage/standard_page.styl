default_blue = #286090
.top
    width 100%
    font-size 28px
    height 60px
    padding-left 10px
    background-color default_blue
    display flex
    flex-direction row
    justify-content space-between
    align-items center
    .project_name
        color #ffffff
    .right_info
        display flex
        flex-direction row
        justify-content flex-end
        font-size 16px
        align-items center
        .small_item
            color #ffffff
            display flex
            flex-direction row
            padding 0 1em
            justify-content flex-end
            align-items center
            > i
                margin 0 1em
            > img
                width 2em
                height 2em
                margin 0 1em
            > .dropdown
                background-color default_blue
                //>ul
                //  background-color #457CD6 !important
                //  border-color #457CD6 !important
                > button
                    color #ffffff
                    border-color default_blue !important
                    background-color default_blue !important
                    > .caret
                        color #ffffff
    /*修改昵称密码modal部分*/
    .modal_outer_pw, .modal_outer_nick
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        z-index: 9999
        float left
        font-size 16px
        background-color rgba(180, 180, 180, 0.9)
        display flex
        flex-direction row
        justify-content center
        align-items center
        display none
        > .modal_inner
            width 400px
            height 380px
            margin-top -5%
            border-radius 5px
            background-color rgba(255, 255, 255, 1)
            border 1px solid rgba(200, 200, 200, 1)
            .modal_top
                display flex
                flex-direction row
                justify-content center
                align-items center
                border-bottom 1px solid rgba(160, 160, 160, 1)
                > h3
                    color rgba(150, 150, 150, 1)
            .modal_mid
                padding 20px 0
                .line
                    width 100%
                    display flex
                    flex-direction row
                    justify-content center
                    align-items center
                    padding 15px 50px 15px 15px
                    > label
                        display block
                        text-align center
                        width 30%
                        font-weight 400
                    > input, .my_input, .my_status
                        outline none
                        width 70%
                        padding 5px
                        border 1px solid rgba(180, 180, 180, 1)
                        border-radius 6px
                        box-shadow none
                    > .my_input
                        border none
                        padding 5px 1px
                        height 45px
                        > button
                            width 100%
                            height 100%
                            border-radius 6px
                            display flex
                            flex-direction row
                            justify-content space-between
                            align-items center
                            outline none
                            >.current_role
                                text-align center
                        > ul
                            width 100%
                            > li
                                padding 3px 0
                                width 100%
                                text-align center
                                color rgba(51, 51, 51, 1)
                                border 1px solid #ffffff
                            > li:hover
                                cursor pinter
                                background-color #e6e6e6
                                border 1px solid #e6e6e6
                    >.my_status
                        border-radius 0
                        border none
                        display flex
                        flex-direction row
                        justify-content center
                        >button
                            width calc(50% - 2px)
                            padding 5px 0
                            color #ffffff
                            border 1px solid rgba(160, 160, 160, 1)
                        >.status_value
                            outline none
                            color #989393
                            background-color #c8c3c3
                        >.select_status
                            color #ffffff
                            background-color #337ab7
                        >.left
                            border-right none
                            maegin-right -1px
                            border-radius 0.6em 0 0 0.6em
                        >.right
                            border-left none
                            margin-left -1px
                            border-radius 0 0.6em 0.6em 0

            .modal_bot
                padding-bottom 20px
                display flex
                flex-direction row
                justify-content center
                align-items center
                > button
                    padding-left 30px
                    padding-right 30px
                > .first
                    margin-right 10px
                > .last
                    margin-left 10px

    .modal_outer_nick
        > .modal_inner
            width 400px
            height 240px
.middle
    width 100%
    min-height calc(100% - 60px)
    height calc(100% - 60px)
    display flex
    flex-direction row
    justify-content flex-start
    > .left_nav
        font-size 16px
        width 200px
        min-height 100%
        height 100%
        background-color #393642
        > ul
            list-style-type none
            padding 0
            margin 0
            a
                text-decoration none
            > li
                padding 15px
                display flex
                flex-direction row
                justify-content space-between
                border-bottom 1px solid rgba(255, 255, 255, 0.07)
                > i
                    color lightgrey
                > a
                    color rgba(255, 255, 255, 0.5)
                    margin-left 0
                > .nav_icon
                    margin-left 0
                > .plus_sign:hover
                    cursor pointer
            > .sub_nav
                display none
                padding 0
                margin 0
                background-color rgba(43, 41, 51, 0.4)
                > ul
                    list-style-type none
                    padding-top 10px
                    padding-bottom 10px
                    > li
                        padding 5px 0 5px 10px
                        > a
                            color rgba(255, 255, 255, 0.8)
                    .active_nav_inner
                        color #76a9d4

    > .right_main
        width calc(100% - 200px)
        min-height 100%
        height 100%