default_blue = #286090
.right_main
  background-color #ebedf0
  height 55px
  .right_top
    width 100%
    font-size 16px
    >.input-group
      padding 10px 15px
      >.form-control
        background-color #d3d3d3
        border none
        border-top-left-radius 8px !important
        border-bottom-left-radius 8px !important
        -moz-border-radius-topleft  8px !important
        -moz-border-radius-bottomleft  8px !important
      button
        background-color #d3d3d3
        border-top-right-radius 8px !important
        border-bottom-right-radius 8px !important
        -moz-border-radius-topright  8px !important
        -moz-border-radius-bottomright  8px !important
  .user_list_outer
    min-height calc(100% - 55px)
    width 100%
    padding 80px 30px 0 30px
    height calc(100% - 55px)
    .user_list_inner
      height calc(100% - 30px)
      width 100%
      background-color #fefefe
      padding 10px 20px 30px 20px
      .insert_div
        width 100%
        height 50px
        display flex
        flex-direction row
        justify-content space-between
        align-items center
        >.left:hover
          cursor pointer
        >.left
          >i
            color default_blue
            margin-right 1em
          >#clear_condition
            color default_blue
        >.right
          #add_user
            background-color default_blue
      .table_outer
        min-height calc(100% - 100px)
        #user_list
          tr
            th
              border-top none
              text-align center
              color rgba(113,113,113, 1)
            td
              color rgba(175,175,175, 0.4)

      .bottom_div
        height 50px
        width 100%
        display flex
        flex-direction row
        justify-content space-between
        align-items center
        >.left
          color default_blue
        >.right
          color default_blue
          font-size 16px
          display flex
          flex-direction row
          justify-content center
          align-items center
          #page_num
            width 50px
            border 1px solid #d3d3d3
            border-radius 10px
            padding 4px
            margin-right 10px
          >.fa
            font-size 36px
            padding 0 15px
          >.fa:hover
            cursor pointer
