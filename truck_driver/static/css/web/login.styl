default_color = #8c8c8c

html
  font-size:14px
  width:100%
  height:100%

body
  width:100%
  height:100%
  .head_c
    width:100%
    height:110px
    padding 30px 0
    display flex
    justify-content flex-start
    .head_left
      width: hl_width = 25%;
      text-align: right
      > img
        wdith:100%
        height:100%
        margin-right:30px
    .head_right
      width: 75%
      height:100%
      border-left: 1px solid default_color
      display flex
      flex-direction: column
      justify-content: center
      .title
        font-size:1.2rem
        color: default_color
        margin-left: 1.8em

  #main
    height:main_height = calc(100% - 210px)
    width:100%
    background-image:url("/static/image/web/beijing.png")
    background-repeat:no-repeat
    background-size:100% 100%
    -moz-background-size:100% 100%
    display:flex
    justify-content center
    align-items: center

    #login_div
      margin-top: -2em
      background-color:#fff
      width:480px
      height:400px
      z-index: 100
      text-align: center

      > div
        border:none

      .title
        font-size:2rem
        font-weight 400

  #bottom_div
    width: 100%
    height: 100px
    font-size:0.9rem
    color: default_color
    text-align: center
    padding-top:3em
    > p
      span
        color: #616161
