/*自定义模态框样式*/
.modal_outer
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color rgba(125, 124, 125, 0.5)
    z-index 999999999
    display none
    .modal_inner
        margin-top 20%
        width 95%
        >#select_image
            display none
        >.modal_stage
            width 100%
            display flex
            flex-direction column
            justify-content center
            align-items center
            >.up
                width 100%
                min-height 400px
                display flex
                flex-direction row
                justify-content center
                padding 30px 10px 10px
                >#view_image
                    width auto
                    height auto
                    max-width 100%
                    max-height 100%
            >.down
                width 100%
                display flex
                flex-direction row
                justify-content space-around

